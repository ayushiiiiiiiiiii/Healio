<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mental Health Chatbot</title>
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Poppins:wght@400;600;700&display=swap');

        body {
            font-family: 'Poppins', sans-serif;
            background-image: url('bg.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            color: #4a4a4a;
        }

        body::before {
            content: '';
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-image: url('bg.png');
            background-size: cover;
            background-position: center;
            background-attachment: fixed;
            filter: blur(8px);
            z-index: -1;
        }

        .container {
            width: 90%;
            max-width: 900px;
            background: rgba(255, 255, 255, 0.25);
            backdrop-filter: blur(15px) saturate(90%);
            border-radius: 20px;
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
            display: flex;
            overflow: hidden;
            flex-direction: column;
            text-align: center;
        }

        .left-panel {
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            border-bottom: 2px solid rgba(0, 0, 0, 0.05);
        }

        .site-name {
            font-size: 2.5rem;
            font-weight: bold;
            color: #ff69b4;
            margin: 0;
        }

        .right-panel {
            padding: 40px;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

        .auth-buttons {
            display: flex;
            gap: 20px;
            margin-bottom: 25px;
        }

        .auth-btn {
            padding: 12px 25px;
            border: 2px solid #ff69b4;
            border-radius: 50px;
            background: none;
            color: #ff69b4;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .auth-btn:hover {
            background: #ff69b4;
            color: white;
        }

        .form-container {
            width: 100%;
            display: flex;
            flex-direction: column;
            align-items: center;
            opacity: 0;
            visibility: hidden;
            max-height: 0;
            overflow: hidden;
            transition: all 0.5s ease-in-out;
        }

        .form-container.active {
            opacity: 1;
            visibility: visible;
            max-height: 500px;
            transition: all 0.5s ease-in-out;
        }

        .form-container h2 {
            font-size: 1.8rem;
            margin-bottom: 20px;
            color: #333;
        }

        .form-group {
            width: 100%;
            margin-bottom: 15px;
        }

        .form-group input {
            width: calc(100% - 24px);
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 8px;
            font-size: 1rem;
        }

        .form-submit-btn {
            width: 100%;
            padding: 12px;
            border: none;
            background: #ff69b4;
            color: white;
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            cursor: pointer;
            transition: background 0.3s ease;
        }

        .form-submit-btn:hover {
            background: #ff1493;
        }

        @media (min-width: 768px) {
            .container {
                flex-direction: row;
                text-align: left;
            }

            .left-panel {
                flex: 1;
                border-bottom: none;
                border-right: 2px solid rgba(0, 0, 0, 0.05);
            }

            .right-panel {
                flex: 1;
                text-align: center;
            }

            .site-name {
                font-size: 3rem;
            }
        }
    </style>
</head>

<body>

    <div class="container">
        <div class="left-panel">
            <h1 class="site-name">
                HEALIO
            </h1>
            <p>Talk it out. Feel better.</p>
        </div>
        <div class="right-panel">
            <div class="auth-buttons">
                <button id="signInBtn" class="auth-btn">Sign In</button>
                <button id="signUpBtn" class="auth-btn">Sign Up</button>
            </div>

            <div id="signInForm" class="form-container">
                <h2>Sign In</h2>
                <form>
                    <div class="form-group">
                        <input type="text" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Password" required>
                    </div>
                    <button type="submit" class="form-submit-btn">Login</button>
                </form>
            </div>

            <div id="signUpForm" class="form-container">
                <h2>Sign Up</h2>
                <form>
                    <div class="form-group">
                        <input type="text" placeholder="Username" required>
                    </div>
                    <div class="form-group">
                        <input type="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="password" placeholder="Password" required>
                    </div>
                    <button type="submit" class="form-submit-btn">Register</button>
                </form>
            </div>
        </div>
    </div>

    <script>
    const signInBtn = document.getElementById('signInBtn');
    const signUpBtn = document.getElementById('signUpBtn');
    const signInForm = document.getElementById('signInForm');
    const signUpForm = document.getElementById('signUpForm');

    function hideAllForms() {
        signInForm.classList.remove('active');
        signUpForm.classList.remove('active');
    }

    signInBtn.addEventListener('click', () => {
        if (!signInForm.classList.contains('active')) {
            hideAllForms();
           
            setTimeout(() => {
                signInForm.classList.add('active');
            }, 1000); 
        } else {
            hideAllForms();
        }
    });

    signUpBtn.addEventListener('click', () => {
        if (!signUpForm.classList.contains('active')) {
            hideAllForms();
           
            setTimeout(() => {
                signUpForm.classList.add('active');
            }, 1000); 
        } else {
            hideAllForms();
        }
    });
</script>

</body>

</html>